{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge",
      "matchManagers": ["github-actions", "docker", "kustomization", "helm", "asdf", "flux", "helm-values", "renovate-config-presets", "pre-commit", "terraform"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": false,
      "matchUpdateTypes": ["minor", "patch", "digest"]
    }
  ]
}
